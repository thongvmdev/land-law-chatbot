# Production Environment Configuration
# Copy this file to .env on your VPS and update with production values

# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_TO_STRONG_PASSWORD_HERE
POSTGRES_DB=langgraph_persistence

# Database Connection Strings (internal Docker network)
POSTGRES_URI=postgresql://postgres:CHANGE_TO_STRONG_PASSWORD_HERE@postgres:5432/langgraph_persistence
LANGGRAPH_PERSISTENCE=postgresql://postgres:CHANGE_TO_STRONG_PASSWORD_HERE@postgres:5432/langgraph_persistence
DATABASE_URL=postgresql://postgres:CHANGE_TO_STRONG_PASSWORD_HERE@postgres:5432/langgraph_persistence
RECORD_MANAGER_DB_URL=postgresql://postgres:CHANGE_TO_STRONG_PASSWORD_HERE@postgres:5432/langgraph_persistence

# Redis Configuration
REDIS_PASSWORD=CHANGE_TO_STRONG_REDIS_PASSWORD_HERE
REDIS_URI=redis://:CHANGE_TO_STRONG_REDIS_PASSWORD_HERE@langgraph-redis:6379

# Weaviate Configuration (internal Docker network)
WEAVIATE_URL=http://weaviate:8080
WEAVIATE_GRPC_URL=weaviate:50051
WEAVIATE_API_KEY=CHANGE_TO_SECURE_WEAVIATE_KEY_HERE

# Docker Registry (for pulling production image)
DOCKER_REGISTRY=your-registry.com/your-username
VERSION=latest

# API Keys
OPENAI_API_KEY=your_production_openai_key
ANTHROPIC_API_KEY=your_production_anthropic_key
GROQ_API_KEY=your_production_groq_key
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# LangSmith Configuration (Production)
LANGCHAIN_API_KEY=your_production_langsmith_key
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=land-law-chatbot-production
LANGCHAIN_PROMPT_API_KEY=your_production_langsmith_key
LANGCHAIN_PROMPT_API_URL=https://api.smith.langchain.com

# Model Configuration
EMBEDDING_MODEL=cloudflare/qwen3-embedding-0.6b
OLLAMA_BASE_URL=http://localhost:11434

# Server Configuration
PORT=3001
NODE_ENV=production

# Weaviate Batch Configuration
WEAVIATE_BATCH_SIZE=50
FORCE_UPDATE=false

